menuconfig SPINALI_ACTUATE_LED_ARRAY
  bool "LED ARRAY"
  help
    This option enables the LED ARRAY

if SPINALI_ACTUATE_LED_ARRAY

config SPINALI_ACTUATE_LED_ARRAY_COUNT
  int "Number of LEDs in array"
  default 12
  range 1 255
  help
    Defines number of LEDS in array



module = SPINALI_ACTUATE_LED_ARRAY
module-str = actuate_led_array
source "subsys/logging/Kconfig.template.log_config"

endif #SPINALI_ACTUATE_LED_ARRAY
