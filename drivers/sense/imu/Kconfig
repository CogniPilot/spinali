menuconfig SPINALI_SENSE_IMU
  bool "IMU"
  default y
  depends on SPINALI_CORE_COMMON
  depends on ZROS
  help
    This option enables the IMU driver interface

if SPINALI_SENSE_IMU

config SPINALI_SENSE_IMU_ACCEL_COUNT
  int "Number of accelerometers"
  default 1
  range 1 4
  help
    Defines number of accelerometers 1-4

config SPINALI_SENSE_IMU_GYRO_COUNT
  int "Number of gyroscopes"
  default 1
  range 1 4
  help
    Defines number of gyroscopes 1-4

module = SPINALI_SENSE_IMU
module-str = sense_imu
source "subsys/logging/Kconfig.template.log_config"

endif # SPINALI_SENSE_IMU
