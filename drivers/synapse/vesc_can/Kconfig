menuconfig SPINALI_SYNAPSE_VESC_CAN
  bool "VESC CAN"
  depends on CAN
  help
    This option enables configuring VESC CAN

if SPINALI_SYNAPSE_VESC_CAN

config SPINALI_SYNAPSE_VESC_CAN_STATUS
  bool "VESC CAN based status"
  depends on CAN
  help
    This option enables status messages for CAN VESC

config SPINALI_SYNAPSE_VESC_CAN_NUMBER
  int "Number of VESC CAN actuators"
  default 1
  range 1 8
  depends on SPINALI_ACTUATE_VESC_CAN || SPINALI_SYNAPSE_VESC_CAN_STATUS
  help
    Defines number of SPINALI_SYNAPSE_VESC CAN actuators 1-8

if SPINALI_ACTUATE_VESC_CAN || SPINALI_SYNAPSE_VESC_CAN_STATUS
menu "SPINALI_SYNAPSE_VESC_CAN_0"

config SPINALI_SYNAPSE_VESC_CAN_BUS_ALIAS_CAN_N_0
  int "CAN bus alias CAN# for SPINALI_SYNAPSE_VESC 0"
  default 0
  depends on SPINALI_ACTUATE_VESC_CAN || SPINALI_SYNAPSE_VESC_CAN_STATUS
  help
    CAN bus device alias name can(number) that connects to SPINALI_SYNAPSE_VESC 0.

config SPINALI_SYNAPSE_VESC_CAN_BUS_FD_0
  bool "CAN bus is CANFD for SPINALI_SYNAPSE_VESC 0"
  depends on SPINALI_ACTUATE_VESC_CAN || SPINALI_SYNAPSE_VESC_CAN_STATUS
  depends on CAN_FD_MODE
  help
    This option sets the CAN bus to use CANFD for 
    device bus

config SPINALI_SYNAPSE_VESC_POLE_PAIR_0
  int "Number of Pole Pairs of motor attached to SPINALI_SYNAPSE_VESC 0"
  default 15
  range 1 128
  depends on SPINALI_ACTUATE_VESC_CAN || SPINALI_SYNAPSE_VESC_CAN_STATUS
  help
    Number of Pole Pairs of motor attached to SPINALI_SYNAPSE_VESC 0.

config SPINALI_SYNAPSE_VESC_CAN_ID_0
  int "ID of SPINALI_SYNAPSE_VESC 0"
  default 0
  range 0 255
  depends on SPINALI_ACTUATE_VESC_CAN || SPINALI_SYNAPSE_VESC_CAN_STATUS
  help
    ID assigned to SPINALI_SYNAPSE_VESC 0.

config SPINALI_SYNAPSE_VESC_CAN_ACTUATOR_VEL_IDX_0
  int "Actuator velocity index for SPINALI_SYNAPSE_VESC 0"
  default 0
  range 0 15
  depends on SPINALI_ACTUATE_VESC_CAN
  help
    Actuator velocity index for SPINALI_SYNAPSE_VESC 0.

config SPINALI_SYNAPSE_VESC_STATUS_BITMASK_0
  int "bitmask for SPINALI_SYNAPSE_VESC status message subscription"
  default 1
  range 0 63
  depends on SPINALI_SYNAPSE_VESC_CAN_STATUS
  help
    bitmask for SPINALI_SYNAPSE_VESC CAN status messages [ STAT6 STAT5 STAT4 STAT3 STAT2 STAT1 ]
    IE setting status message 4 and 1 would be 0b001001 = 9
    If no status desired set to 0 for it to skip

endmenu

endif

if SPINALI_SYNAPSE_VESC_CAN_NUMBER > 1

